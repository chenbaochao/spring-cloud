<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.play001.cloud.product.api.mapper.ProductMapper">
    <resultMap id="productResult" type="com.play001.cloud.common.entity.Product">
        <result property="id" column="id"/>
        <result property="showPrice" column="show_price"/>
        <result property="title" column="title"/>
        <result property="introduction" column="introduction"/>
        <result property="status" column="status"/>
        <result property="createTime" column="create_time"/>
        <result property="soldNumber" column="sold_number"/>
        <!-- 封面 -->
        <association property="thumb" column="thumb_id" select="findImage"/>
        <!-- 产品分类 -->
        <association property="category" select="findCategory" column="category_id" />
        <!-- 产品参数 -->
        <collection property="parameters" select="findParameters" column="id" ofType="com.play001.cloud.common.entity.Parameter"/>
        <!-- 产品标签 -->
        <collection property="labels" select="findLabels" column="id" ofType="String" />
        <!-- 产品图片 -->
        <collection property="pics" select="findPics" column="id" ofType="com.play001.cloud.common.entity.ProductImage" />
        <!-- 产品套餐 -->
        <collection property="specs" select="findSpecs" column="id" ofType="com.play001.cloud.common.entity.Specification"/>

    </resultMap>
    <resultMap id="productImageMap" type="com.play001.cloud.common.entity.ProductImage">
        <result property="id" column="id"/>
        <result property="sort" column="sort"/>
        <association property="image" column="image_id" select="findImage"/>
    </resultMap>

    <select id="findById" resultMap="productResult">
        SELECT
            p.id, p.name, p.category_id, p.sold_number, p.show_price, p.title, p.thumb_id, pd.introduction, p.status, p.create_time, p.remarks
        FROM os_product p, os_product_introduction pd
        WHERE p.id = #{id} AND pd.product_id = #{id}
        LIMIT  1
    </select>

    <!-- 搜索简单实现 -->
    <select id="search" resultMap="productResult">
        SELECT
        p.id, p.name, p.category_id, p.show_price, p.title, p.thumb_id, pd.introduction, p.status, p.create_time, p.remarks
        FROM os_product p, os_product_introduction pd
        WHERE p.title like concat('%', #{keyword}, '%')  AND pd.product_id = #{id}
    </select>

    <!-- 分类+分页 -->
    <select id="listByCategoryId" resultMap="productResult">
        SELECT
        p.id, p.name, p.category_id, p.show_price, p.title, p.thumb_id, pd.introduction, p.status, p.create_time, p.remarks
        FROM os_product p, os_product_introduction pd
        WHERE pd.product_id = p.id
        <!-- categoryId为0表示检索全部商品 -->
            <if test='categoryId != 0'>
                AND p.category_id = #{categoryId}
            </if>
            <if test='sort == 1'>
                ORDER BY p.create_time DESC
            </if>
            <if test='sort == 2'>
                ORDER BY p.sold_number DESC
            </if>
            <if test='sort == 3'>
                ORDER BY p.show_price
            </if>
            <if test='sort == 4'>
                ORDER BY p.show_price DESC
            </if>
        LIMIT #{start}, #{quantity}
    </select>

    <!-- 计算总条数 -->
    <select id="countByCategory" resultType="Long">
        SELECT
        count(p.id)
        FROM os_product p
        WHERE p.category_id = #{categoryId}
    </select>





    <!-- 查找图片 -->
    <select id="findImage"  resultType="com.play001.cloud.common.entity.Image">
        SELECT id, url, path, storage_name as storageName from support_image_log
        where id = #{id}
    </select>

    <!-- 商品参数-->
    <select id="findParameters" resultType="com.play001.cloud.common.entity.Parameter">
        SELECT
            id, product_id as productId, name, value, sort
        FROM os_product_parameter
        WHERE product_id = #{id}
    </select>
    <!-- 查找标签-->
    <select id="findLabels" resultType="String">
        SELECT
            name
        FROM os_product_label
        WHERE product_id = #{id}
    </select>

    <!-- 相册查找-->
    <select id="findPics" resultMap="productImageMap">
        SELECT
        id, sort, image_id
        FROM os_product_image
        WHERE product_id = #{id}
    </select>

    <!-- 查找套餐-->
    <select id="findSpecs" resultType="com.play001.cloud.common.entity.Specification">
        SELECT
        id, product_id as productId, name, sold_number as soldNumber, stock, price
        FROM os_product_specification
        WHERE product_id = #{id}
    </select>

    <!-- 产品所属分类-->
    <select id="findCategory" resultType="com.play001.cloud.common.entity.Category">
        SELECT
        id, name
        FROM os_category
        WHERE id = #{category_id}
        LIMIT  1
    </select>
</mapper>